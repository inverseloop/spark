body {
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  padding-top: 4.5rem;
  margin-bottom: 60px;
}

html {
	position: relative;
	min-height: 100%;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  line-height: 60px; /* Vertically center the text there */
  background-color: #f5f5f5;
}

a {
  color: #00B7FF;
}

